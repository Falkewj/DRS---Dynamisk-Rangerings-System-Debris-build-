@using DRS___Dynamisk_Rangerings_System.Pages.Admin
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DRS___Dynamisk_Rangerings_System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/StyleSheet.css" />
    <link rel="stylesheet" href="~/css/min-css.css">
</head>
<body class="d-flex flex-column min-vh-100">
    <header>        
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" style="color: #70ac2b" asp-area="" asp-page="/Index">D.R.S.</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <a class="nav-link" style="color: #70ac2b" asp-area="" asp-page="/Standings/Standings">Standings</a>
                        </li>
                        @{
                            if (AdminLoginModel.Admin != null && AdminLoginModel.Admin.UserName == "admin")
                            {
                                <li class="nav-item">
                                    <a class="nav-link" style="color: #70ac2b" asp-area="" asp-page="/Participant/AddParticipant">Tilføj Hold/Spillere</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" style="color: #70ac2b" asp-area="" asp-page="/Admin/AdminPanel">Admin Panel</a>
                                </li>
                            }
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @{
                            if (AdminLoginModel.Admin == null)
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-page="/Admin/AdminLogin">Login</a>
                                </li>
                            }
                            else
                            {

                                <li class="nav-item nav-link mr-3">
                                    Admin: @AdminLoginModel.Admin.UserName
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-page="/Admin/AdminLogout">Logout</a>
                                 </li> 
                            }
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - D.R.S. Dynamisk Rangerings System - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
